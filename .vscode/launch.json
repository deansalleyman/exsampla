    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch the React Native iOS ",
            "cwd": "${workspaceFolder}",
            "type": "reactnativedirect",
            "request": "attach",
            "platform": "ios",
            "port": 9221
        },
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
     {
         "name": "Debug iOS",
         "cwd": "${workspaceFolder}",
         "type": "reactnative",
         "request": "launch",
         "platform": "ios"
     }
    ]
}